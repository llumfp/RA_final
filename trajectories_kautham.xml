<Scenario>
    <!-- Definición del entorno -->
    <World>
        <Filename>path/to/environment/file.iv</Filename>
    </World>
    
    <!-- Definición del robot UR3 -->
    <Robot>
        <Name>UR3</Name>
        <Filename>path/to/ur3/file.iv</Filename>
        <Kinematics>path/to/ur3/kinematics.xml</Kinematics>
        <Collision>path/to/ur3/collision.xml</Collision>
        <InitialConfiguration>0 0 0 0 0 0</InitialConfiguration>
    </Robot>
    
    <!-- Definición del prisma como objeto manipulable -->
    <ManipulableObject>
        <Name>PrismObject</Name>
        <Geometry>
            <Type>Box</Type>
            <Dimension>0.2 0.2 0.4</Dimension> <!-- Dimensiones del prisma: ancho, alto, profundidad -->
        </Geometry>
        <Position>0.5 0.5 0.0</Position> <!-- Posición inicial del prisma -->
        <Orientation>0.0 0.0 0.0 1.0</Orientation> <!-- Orientación inicial del prisma en cuaterniones (x, y, z, w) -->
        <Mass>1.0</Mass> <!-- Masa del prisma para simulaciones dinámicas -->
    </ManipulableObject>
    
    <!-- Definición de obstáculos (si los hay) -->
    <Obstacle>
        <Name>BoxObstacle</Name>
        <Geometry>
            <Type>Box</Type>
            <Dimension>1.0 0.5 0.5</Dimension>
        </Geometry>
        <Position>1.0 1.0 0.0</Position>
        <Orientation>0.0 0.0 0.0 1.0</Orientation>
    </Obstacle>

    <!-- Configuración final deseada del UR3 -->
    <Goal>
        <Configuration>1.57 0 0 1.57 -1.57 0</Configuration>
    </Goal>
</Scenario>
